        <div class="column">
            <p>{{ section.settings.columnone }}</p>
        </div>
        <div class="column">
            <p>{{ section.settings.columntwo }}</p>
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Two Column Text",
    "settings":[
        {
            "id" : "columnone",
            "label" : "Column One Text",
            "type" : "textarea"
        },
        {
            "id" : "columntwo",
            "label" : "Column Two Text",
            "type" : "textarea"
        }
    ],
    "presets": [
        {
            "name": "Two Column Text",
            "category": "Text"
        }
    ]
}

{% endschema %}
