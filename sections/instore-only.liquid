            <div id="tab-1" class="tab-content current">
              <div class="tab-content-title">
                Product details
              </div>
              <div class="column">
                {{ product.description }}
                {{ product.metafields.accentuate.product_details }}
              </div>

              <div class="column">
                {{ product.metafields.accentuate.product_detail_column_two }}
              </div>
            </div>
