<section id="miniCart" class="miniCart">
    <div class="cart-view" data-cart-view="data-cart-view">
        <div class="top">
            <span class="close">{% include 'cross-small' %} Close</span>
            <span class="title">Your Shopping Bag</span>
            <span class="meta">Contains <strong><span class="totalQty" data-cart-render="item_count">0</span> items</strong> Totalling <span class="totalPrice" data-cart-render="total_price_money_with_currency">0.00</span></span>
        </div>
        <span class="products">
            <table>
                <!-- <thead>
                    <tr>
                        <th>Item</th>
                        <th>Price</th>
                        <th colspan="2">Qty</th>
                        <th>Line Price</th>
                    </tr>
                </thead> -->
                <tbody>
                    <tr rv-each-item="cart.items">
                        <td>
                            <img rv-src="item.image | productImageSize '240x240'" />
                        </td>
                        <td>
                            <span class="productDetails">
                                <p rv-text="item.title"></p>
                                <ul rv-hide="item.propertyArray | empty">
                                    <li rv-each-property="item.propertyArray < properties">
                                        <small class="text-muted">{property.name}: {property.value}</small>
                                    </li>
                                </ul>
                            </span>
                            <span class="updatePrice">
                                <span class="quantity">
                                    <a class="cartMinus" href="#" rv-data-cart-update="index | plus 1" rv-data-cart-quantity="item.quantity | minus 1">-</a>
                                    <span rv-text="item.quantity"></span>
                                    <a href="#" rv-data-cart-update="index | plus 1" rv-data-cart-quantity="item.quantity | plus 1">+</a>
                                </span>
                                <span class="total" rv-html="item.line_price | money Currency.currentCurrency"></span>
                                <!-- <span rv-html="item.price | money Currency.currentCurrency"></span> -->
                            </span>
                        </td>
                        <td>
                            <a onclick="ga('send', 'event', 'Shopping Bag', 'Remove Click', '{{ product.title }}');" href="#" rv-data-cart-remove="index | plus 1">&times;</a>
                        </td>
                        <!-- <td class="noItems" rv-show="cart.item_count | lt 1">
                            <span class="noItemsText" colspan="5">You don't have any items in your cart.</span>
                        </td> -->
                    </tr>



                </tbody>
                <tfoot rv-show="cart.item_count | gt 0">
                    <tr>
                        <td colspan="4" rv-html="cart.total_weight | weight_with_unit" style="visibility:hidden;"></td>
                    </tr>
                </tfoot>
            </table>

            <!-- <img src="loader.gif" width="16" height="11" class="cart-visible-loading"/> -->
        </span>
        <span class="bagTotal">
            <!--[if IE]>
            <style>
            .bagTotal {
            position: absolute;
            }
            </style>
            <![endif]-->
            <span class="text">Bag Total</span>
            <span class="total" rv-html="cart.total_price | money Currency.currentCurrency"></span>
            <a class="std btn" href="/cart">View Bag</a>
        </span>
    </div>
</section>

